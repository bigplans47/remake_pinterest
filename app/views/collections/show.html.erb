<h1><%= @collection.title %></h1>
<% if @collection.posts.any? %>
  <p>Collection Reviews</p>
  <ul>
    <% @collection.posts.each do |single_post| %>
      <li><%= single_post.caption %> | <%= link_to 'Edit post', edit_collection_post_path(@collection, single_post) %> | <%= link_to 'Delete Post', collection_post_path(@collection, single_post), :data => {:confirm => 'Are you sure?', :method => 'delete'} %></li>
      <% end %>
    </ul>
<% else %>
  <p>No posts yet</p>
<% end %>

<p><%= link_to 'Add a post', new_collection_post_path(@collection) %></p>
<p><%= link_to 'Edit Collection', edit_collection_path(@collection) %></p>
<p><%= link_to 'Return to Collections', collections_path %></p>
<p><%= link_to 'Delete', collection_path(@collection),
  :data => {:confirm => "Are you sure", :method => "delete"} %>
</p>
